{% extends 'base.admin.html.twig' %}

{% block body %}
    <a class="btn btn-outline-primary btn-sm" role="button" aria-pressed="true"
       href="{{ path('admin_referential_add') }}">
        Ajouter un nouveau référentiel +
    </a>
    <br>
    <br>
    <div class="list-group">
        {% if repositories %}
            <span class="list-group-item active text-center">
                Référentiels
            </span>
        {% endif %}
        {% for referential in repositories %}
            <a class="list-group-item list-group-item-action"
               href="{{ url('admin_referential_manage', {'referential': referential.id}) }}">
                {{ referential.id }}
                {% if referential.description %}
                    (<span class="font-weight-light">{{ referential.description }}</span>)
                {% endif %}
            </a>
        {% endfor %}
    </div>
{% endblock %}

